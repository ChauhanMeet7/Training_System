@model WebApplication1.Models.TrainingCompletionReport

@{
    ViewData["Title"] = "Delete Training Completion Report";
}
<head>
    <link href="~/css/Delete.css" rel="stylesheet" />
</head>
<div class="custom-card">
    <h1 class="page-title">Delete Report</h1>

    <p class="warning-text">Are you sure you want to delete this Report?</p>

    <hr />


<div>
    <p><strong>Trainee ID:</strong> @Model.StudentId</p>
    <p><strong>Start Date:</strong> @Model.TrainingStartDate.ToShortDateString()</p>
    <p><strong>End Date:</strong> @Model.TrainingEndDate.ToShortDateString()</p>
    <p><strong>Completion Status:</strong> @Model.CompletionStatus</p>
    <p><strong>Written Test Score:</strong> @Model.WrittenTestScore</p>
    <p><strong>Performance Remarks:</strong> @Model.PerformanceRemarks</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ReportID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
</div>